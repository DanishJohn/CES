@page
@using ParcelDelivery.Data.DataContracts.Segment
@model ParcelDelivery.Pages.Search.SearchPageModel
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="../../css/style.css" type="text/css" />
    <link href="~/css/search.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Delivery plan</title>
</head>

<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <li class="nav-item">
                <a class="nav-link active" href="./search">
                    <i class="fa fa-search"></i>
                    <span>Search routes</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="./report">
                    <i class="fa fa-address-card"></i>
                    <span>Statistics</span>
                </a>
            </li>

            <li class="nav-item">
                <button class="btn"
                        style="background-color: transparent; position:absolute; padding-left: 50px;bottom: 0; color: white;">
                    <i class="fa fa-sign-out"></i> Logout
                </button>

            </li>
        </ul>



        <!-- Content of page-->
        <div id="content-wrapper">
            <div id="content">


                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-center" style="height: 10vh">
                        <img src="~/asset/logo.png" class="img-fluid" alt="Oceanic World Air logo">
                    </div>
                    <hr />
                    <div class="card box border-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-body"
                                             style="background-color: rgba(8,67,96,1); text-align: center;">
                                            <h5 style="color: white; font-size: 25px;">
                                                Parcel Delivery Price Calculation
                                            </h5>
                                            <div id='parcelInformation'>
                                                <form style="color: white;" method="post">
                                                    <div class="row" style="text-align: left;">

                                                        <div class="col">
                                                            <label for="inputDeparture">
                                                                From <span style="color: red;">*</span>
                                                            </label>
                                                            <select class="form-control" asp-for="departureCityId" asp-items="@Model.cityList"></select>
                                                        </div>
                                                        <div class="col">
                                                            <label for="inputDeparture">
                                                                To <span style="color: red;">*</span>
                                                            </label>
                                                            <select class="form-control" asp-for="destinationCityId" asp-items="@Model.cityList"></select>
                                                        </div>
                                                    </div>
                                                    <br />
                                                    <div class="row" style="text-align: left;">
                                                        <div class="col">
                                                            <div class="card"
                                                                 style="background-color: transparent; border: 1px solid; height: 37vh;">
                                                                <div class="card-header">Parcel information</div>
                                                                <div class="card-body">

                                                                    <label for="inputDeparture">
                                                                        Category <span style="color: red;">*</span>
                                                                    </label>
                                                                    <select class="form-control" asp-for="categoryId" asp-items="@Model.categoryList"></select>
                                                                    <label style="color: orange; font-style: italic">
                                                                        Please
                                                                        note that we do not support delivery on recorded
                                                                        delivery and live animals.
                                                                        Some special types of parcel will be charged an
                                                                        extra amount.
                                                                    </label>
                                                                    <br />
                                                                    <br />
                                                                    <label for="inputDeparture">
                                                                        Weight <span style="color: red;">*</span>
                                                                    </label>
                                                                    <select class="form-control" asp-for="weightId" asp-items="@Model.weightList"></select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="card"
                                                                 style="background-color: transparent; border: 1px solid; height: 37vh;">
                                                                <div class="card-header">Parcel dimensions</div>
                                                                <div class="card-body">

                                                                    <label for="inputDeparture">
                                                                        Height <span style="color: red;">*</span>
                                                                    </label>
                                                                    <select class="form-control" asp-for="heightId" asp-items="@Model.heightList"></select>
                                                                    <br />
                                                                    <label for="inputDeparture">
                                                                        Depth <span style="color: red;">*</span>
                                                                    </label>
                                                                    <select class="form-control" asp-for="depthId" asp-items="@Model.depthList"></select>
                                                                    <br />
                                                                    <label for="inputDeparture">
                                                                        Breadth <span style="color: red;">*</span>
                                                                    </label>
                                                                    <select class="form-control" asp-for="breadthId" asp-items="@Model.breadthList"></select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <br />
                                                    <div class="row" style="align-items: center; text-align: center;">
                                                        <div class="col">
                                                            <button class="btn btn-lg" type="submit"
                                                                    style="padding-left: 50px; padding-right: 50px; background-color: rgba(0,29,65,1); color: white; font-weight: bold;">
                                                                Calculate
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                                <br>

                                                @if (@Model.searchResult != null)
                                                {
                                                    <hr style="background-color: white; margin-left: 100px;  margin-right: 100px" />

                                                    var totalResults = @Model.searchResult.Count;

                                                    if (totalResults == 0)
                                                    {
                                                        <h4 style="color: white; font-size: 25px;">
                                                            No result found.
                                                        </h4>
                                                    }
                                                    if (totalResults > 0)
                                                    {
                                                        <h5 style="color: white; font-size: 25px;">Search result</h5>

                                                        <p style="color: white; text-align: left; font-style: italic; font-size: 15px; font-weight: lighter; padding-left: 100px;">
                                                            Found @totalResults item(s)
                                                        </p>



                                                        <table style="color: white; width:100%; font-style: italic; font-size: 18px; padding: 50px; border-collapse:separate; border-spacing:0 20px;">
                                                            <tr>
                                                                <th></th>
                                                                <th>Estimated total time arrival (hours)</th>
                                                                <th>Total price ($)</th>
                                                            </tr>
                                                            @{var index = 0; }
                                                            @foreach (var result in @Model.searchResult)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        <p style="font-size: 30px;">@result.Departure.Name <i class="fa fa-arrow-right"></i> @result.Destination.Name</p>
                                                                        <br />

                                                                        @foreach (var company in @result.TransportationCompanies)
                                                                        {
                                                                            @if (company == TransportationCompany.OA)
                                                                            {
                                                                                <img src="~/asset/oa.png" />
                                                                            }
                                                                            @if (company == TransportationCompany.TL)
                                                                            {
                                                                                <img src="~/asset/tl.png" />
                                                                            }
                                                                            @if (company == TransportationCompany.EIT)
                                                                            {
                                                                                <img src="~/asset/eit.png" />
                                                                            }
                                                                        }
                                                                    </td>
                                                                    <td>@result.TotalDuration</td>
                                                                    <td>@result.TotalPrice</td>
                                                                    <td>
                                                                        <button class="btn btn-light" data-toggle="modal" data-content="" id=""
                                                                                data-target="#modal-@index">
                                                                            View detail
                                                                        </button>
                                                                    </td>
                                                                </tr>
                                                                index = index + 1;
                                                            }
                                                        </table>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    <br />
                </div>
            </div>


        </div>
    </div>

    @if (@Model.searchResult != null)
    {
        var i = 0;
        @foreach (var element in @Model.searchResult)
        {
            <div class="modal fade" id="modal-@i" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="color: white; background-color:  rgba(8,67,96,1);">
                            <h5 class="modal-title" id="exampleModalLabel">Route detail</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        @foreach (var segment in element.Segments)
                        {
                            <div class="modal-body">
                                <table class="table">
                                    <tr>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>Estimated duration</th>
                                        <th>Price</th>
                                        <th>Extra fee</th>
                                        <th>Total price</th>
                                    </tr>
                                    <tr>
                                        <td>@segment.Departure.Name</td>
                                        <td>@segment.Destination.Name</td>

                                        @if (@segment.TransportationCompany == TransportationCompany.OA)
                                        {
                                            <img src="~/asset/oa.png" />
                                        }
                                        @if (@segment.TransportationCompany == TransportationCompany.TL)
                                        {
                                            <img src="~/asset/tl.png" />
                                        }
                                        @if (@segment.TransportationCompany == TransportationCompany.EIT)
                                        {
                                            <img src="~/asset/eit.png" />
                                        }
                                        <td>@segment.EstimatedDuration</td>
                                        <td>@segment.Price</td>
                                        <td>@segment.ExtraFee</td>
                                        <td>@segment.TotalPrice
                                    </tr>


                                </table>
                            </div>

                        }
                    </div>
                </div>
            </div>
            i += 1;
        }
    }
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>

</html>